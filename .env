# Dominica News Frontend Environment Configuration

# API Configuration - Update with your backend URL
VITE_API_URL=https://your-backend-url.com/api
VITE_API_TIMEOUT=15000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Environment Configuration
VITE_ENVIRONMENT=development

# Feature Flags
VITE_DEBUG_MODE=true
VITE_ANALYTICS=false
VITE_ERROR_REPORTING=true
VITE_DEV_TOOLS=true
VITE_PERFORMANCE_MONITORING=true
VITE_CACHE_ENABLED=true

# Security Features
VITE_SECURE_COOKIES=false
VITE_CSRF_PROTECTION=true
VITE_CONTENT_SECURITY_POLICY=false

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_CONSOLE_LOGS=true
VITE_REMOTE_LOGS=false
VITE_ERROR_TRACKING=true
VITE_PERFORMANCE_LOGS=true

# SEO and Meta Configuration
VITE_SITE_URL=http://localhost:3000
VITE_SITE_NAME=Dominica News
VITE_DEFAULT_META_DESCRIPTION=Latest news and updates from Dominica and the Caribbean
VITE_DEFAULT_META_KEYWORDS=dominica,news,caribbean,politics,sports,weather

# Social Media Configuration
VITE_FACEBOOK_APP_ID=
VITE_TWITTER_HANDLE=@DominicaNews
VITE_SOCIAL_SHARING=true

# Performance Configuration
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true
VITE_COMPRESSION=true
VITE_MINIFICATION=false

# Build Information
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_DATE=2024-11-06
VITE_BUILD_HASH=
VITE_DEPLOYMENT_ENV=development