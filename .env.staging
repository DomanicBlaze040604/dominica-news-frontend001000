# Staging Environment Configuration

# API Configuration
VITE_API_URL=https://staging-api.dominica-news.com/api
VITE_API_TIMEOUT=12000
VITE_API_RETRY_ATTEMPTS=2
VITE_API_RETRY_DELAY=750

# Environment Configuration
VITE_ENVIRONMENT=staging

# Feature Flags - Staging (Production-like with some debugging)
VITE_DEBUG_MODE=false
VITE_ANALYTICS=false
VITE_ERROR_REPORTING=true
VITE_DEV_TOOLS=false
VITE_PERFORMANCE_MONITORING=true
VITE_CACHE_ENABLED=true
VITE_SERVICE_WORKER=false
VITE_PWA_ENABLED=false

# Security Features - Production-like
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true
VITE_CONTENT_SECURITY_POLICY=true

# Logging Configuration - More verbose than production
VITE_LOG_LEVEL=info
VITE_CONSOLE_LOGS=false
VITE_REMOTE_LOGS=true
VITE_ERROR_TRACKING=true
VITE_PERFORMANCE_LOGS=true

# SEO and Meta Configuration
VITE_SITE_URL=https://staging.dominica-news.com
VITE_SITE_NAME=Dominica News (Staging)
VITE_DEFAULT_META_DESCRIPTION=Staging environment for Dominica News
VITE_DEFAULT_META_KEYWORDS=dominica,news,staging,testing

# Social Media Configuration
VITE_FACEBOOK_APP_ID=
VITE_TWITTER_HANDLE=@DominicaNews
VITE_SOCIAL_SHARING=true

# Performance Configuration - Production-like
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true
VITE_COMPRESSION=true
VITE_MINIFICATION=true

# Build Information
VITE_BUILD_VERSION=staging
VITE_BUILD_DATE=2024-11-04
VITE_BUILD_HASH=
VITE_DEPLOYMENT_ENV=staging